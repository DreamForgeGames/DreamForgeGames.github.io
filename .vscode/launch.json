    "version": "0.2.0",
    "configurations": [
    {
        "name": "Start http-server (404 page)",
        "type": "pwa-node",
        "request": "launch",
        "runtimeExecutable": "npx",
        "runtimeArgs": ["http-server", "./", "--404", "404.html"],
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "presentation": { "reveal": "always", "panel": "shared" }
    }
    ]
}